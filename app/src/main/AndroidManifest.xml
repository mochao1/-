<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mc.happybuy">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.CAMERA"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/buy"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@android:style/Theme.NoTitleBar">
    <activity android:name=".StartActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".MainActivity">
    </activity>
    <activity android:name=".LogoActivity">
    </activity>
    <activity android:name=".UserInfoActivity">
    </activity>
    <activity android:name=".UserRegisterActivity">
    </activity>
    <activity android:name=".ShoppingInfoActivity">
    </activity>
    <activity android:name=".MoneyActivity">
    </activity>
    <activity android:name=".ScannerActivity">
    </activity>
    <activity android:name=".SaomiaoActivity">
    </activity>
    <activity android:name=".ReceivingNoteActivity">
    </activity>

    <service
        android:name="service.MyService"
        android:enabled="true"
        android:exported="true">
    </service>

    <activity android:name=".RubberActivity">
    </activity>
    <activity android:name=".BuyActivity">
    </activity>
    <activity android:name=".BuyItemActivity">
    </activity>
  </application>

</manifest>