<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg3"
    android:gravity="center"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="用户注册"

      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      >
    <EditText
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/et_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:maxLines="1"
        />

    <TextView
        android:layout_toLeftOf="@id/et_username"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      >

    <EditText
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/et_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        />
    <TextView
        android:layout_toLeftOf="@id/et_password"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      >
    <EditText
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/sure_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        />

    <TextView
        android:layout_toLeftOf="@id/sure_password"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"

        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      >

    <RadioGroup
        android:id="@+id/sex"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/sex_man"
          android:textColor="@color/dodgerblue"
          android:text="男"
          />
      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/sex_women"
          android:layout_marginLeft="20dp"
          android:textColor="@color/dodgerblue"
          android:text="女"
          />
    </RadioGroup>
    <TextView
        android:layout_toLeftOf="@id/sex"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      >

    <EditText
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/et_phonenumber"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:maxLines="1"
        android:inputType="number"
        />
    <TextView
        android:layout_toLeftOf="@id/et_phonenumber"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号码"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      >
    <EditText
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/et_shippingaddress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="请输入收货地址"
        android:maxLines="1"
        />

    <TextView
        android:layout_toLeftOf="@id/et_shippingaddress"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货地址"
        />
  </RelativeLayout>


  <Button
      android:layout_gravity="center_horizontal"
      android:id="@+id/btn_egistered"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="注  册"
      />


</LinearLayout>
