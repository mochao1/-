<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/goldenrod"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
      android:gravity="center"
      >
    <ImageButton
        android:id="@+id/im_back_commodity_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/back"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="商品详情"
        android:textSize="30sp"
        />
  </LinearLayout>
  <ImageView
      android:id="@+id/iv_pictures_commodity_information"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.6"
      />

  <TextView
      android:id="@+id/tv_details_commodity_information"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.2"
      android:gravity="center"
      android:text="基本信息"
      android:textSize="20sp"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
      >
    <TextView
        android:id="@+id/tv_price_commodity_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="商品价格"
        android:textColor="#ffff0000"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_number_commodity_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="购买人数"
        android:textSize="20sp"
        />
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.02"
      android:gravity="center"
      >
    <Button
        android:id="@+id/btn_purchase_commodity_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  购     买  "
        />
    <Button
        android:id="@+id/btn_add_commodity_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入购物车"
        />
  </LinearLayout>


</LinearLayout>

